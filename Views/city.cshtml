<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>@Model.GetName()</h1>
    <h3>Departures: </h3>
    <ul>
      @foreach(var flight in Model.GetDepartures())
      {
        <div class="flight-info">
          <p>Flight Name: @flight.GetName()</p>
          <p>Status: @flight.GetStatus()</p>
          <p>Departure Time: @flight.GetDepartureTime()</p>
        </div>
      }
    </ul>
    <h3>Arrivals: </h3>
    <ul>
      @foreach(var flight in Model.GetArrivals())
      {
        <div class="flight-info">
          <p>Flight Name: @flight.GetName()</p>
          <p>Status: @flight.GetStatus()</p>
          <p>Departure Time: @flight.GetArrivalTime()</p>
        </div>
      }
    </ul>
      <a href="/flights"><button type="button" name="button">View Flights</button></a>
      <a href="/city/new"><button type="button" name="button">Add City</button></a>
      <a href="/flight/new"><button type="button" name="button">Add Flights</button></a>
  </body>
</html>
